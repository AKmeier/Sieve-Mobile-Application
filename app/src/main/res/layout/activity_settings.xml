<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="toHomePage"
                    android:text="@string/returnHome" />

                <TextView
                    android:id="@+id/SettingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="33sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp" />

            <TextView
                android:id="@+id/Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Notification Settings"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/CreateSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Create a Schedule"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/DisplaySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Display Settings"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Toggle Theme"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/OtherSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Other Settings"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="About"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
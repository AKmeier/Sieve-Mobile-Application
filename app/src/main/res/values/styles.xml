<resources>

    <!-- Default Theme -->
    <style name="SieveDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:colorPrimaryDark">@color/defaultButton</item>
        <item name="android:colorAccent">@color/defaultAccent</item>
        <item name="android:statusBarColor">@color/defaultBar</item>
        <item name="android:colorBackground">@color/defaultBackground</item>
        <item name="priorityHigh">@color/defaultHigh</item>
        <item name="priorityMed">@color/defaultMed</item>
        <item name="priorityLow">@color/defaultLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="colorAccent">@color/defaultAccent</item>
    </style>

    <!-- Alternative Theme -->
    <style name="SieveAlternative" parent="SieveDefault">
        <item name="android:colorBackground">@color/alternativeBackground</item>
        <item name="priorityHigh">@color/alternativeHigh</item>
        <item name="priorityMed">@color/alternativeMed</item>
        <item name="priorityLow">@color/alternativeLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:colorPrimaryDark">@color/alternativeButton</item>
        <item name="android:statusBarColor">@color/alternativeBar</item>
        <item name="android:colorAccent">@color/alternativeAccent</item>
    </style>

    <!-- Combined Theme -->
    <style name="SieveCombined" parent="SieveDefault">
        <item name="android:colorBackground">@color/combinedBackground</item>
        <item name="priorityHigh">@color/combinedHigh</item>
        <item name="priorityMed">@color/combinedMed</item>
        <item name="priorityLow">@color/combinedLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:colorPrimaryDark">@color/combinedButton</item>
    </style>

    <!-- Dark Theme -->
    <style name="SieveDark" parent="SieveDefault">
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="priorityHigh">@color/darkHigh</item>
        <item name="priorityMed">@color/darkMed</item>
        <item name="priorityLow">@color/darkLow</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:colorPrimaryDark">@color/darkButton</item>
        <item name="android:statusBarColor">@color/darkBar</item>
        <item name="android:textColorPrimary">@color/textWhite</item>

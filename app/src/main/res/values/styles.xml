    </style>

    <!-- Candy Theme -->
    <style name="SieveCandy" parent="SieveDefault">
        <item name="android:colorBackground">@color/candyBackground</item>
        <item name="priorityHigh">@color/candyHigh</item>
        <item name="priorityMed">@color/candyMed</item>

<resources>

    <!-- Base application theme. -->
    <style name="SieveDefault" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/priorityLow</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorPrimary">@color/priorityHigh</item>
        <item name="android:colorPrimaryDark">@color/priorityMed</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="priorityLow">@color/priorityLow</item>
        <item name="priorityMed">@color/priorityMed</item>
        <item name="priorityHigh">@color/priorityHigh</item>
    </style>

    <style name="SieveAlternative" parent="SieveDefault" >
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/priorityLow2</item>
        <item name="android:colorBackground">@color/colorBackground2</item>
        <item name="android:colorPrimary">@color/priorityHigh2</item>
        <item name="android:colorPrimaryDark">@color/priorityMed2</item>
        <item name="android:statusBarColor">@color/colorSecondary2</item>
        <item name="priorityLow">@color/priorityLow2</item>
        <item name="priorityMed">@color/priorityMed2</item>
        <item name="priorityHigh">@color/priorityHigh2</item>
    </style>

</resources>
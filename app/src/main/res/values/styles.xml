    <style name="SieveTwilight" parent="SieveDefault" >
        <item name="android:colorBackground">@color/twilightBackground</item>
        <item name="colorAccent">@color/twilightAccent</item>
        <item name="android:statusBarColor">@color/twilightBar</item>

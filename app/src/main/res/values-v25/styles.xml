<resources>

    <!-- Default Theme -->
    <style name="SieveDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:colorPrimaryDark">@color/defaultButton</item>
        <item name="android:statusBarColor">@color/defaultBar</item>
        <item name="android:colorBackground">@color/defaultBackground</item>
        <item name="priorityHigh">@color/defaultHigh</item>
        <item name="priorityMed">@color/defaultMed</item>
        <item name="priorityLow">@color/defaultLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="colorAccent">@color/defaultAccent</item>
        <item name="dividerColor">@color/defaultBar</item>
        <item name="dividerHidden">@color/defaultBackground</item>
        

    </style>
    <style name="SieveDefaultDatePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/defaultAccent</item><!--Color of the selector for date-->
        <item name="android:textColor">@color/textBlack</item><!--text color for header and ok and cancel buttons-->
        <item name="android:textColorSecondary">@color/textBlack</item><!--Text color for day names on calendar-->
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimary">@color/textBlack</item><!--Sets Color for text in calendar-->
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name ="android:headerBackground">@color/defaultAccent</item><!--This changes the background color for header-->
        <item name="android:colorAccent">@color/defaultAccent</item><!--Default color of the top bar in date picker-->
        <item name="android:background">@color/defaultBackground</item><!--Sets background color for calendar area-->
    </style>
    <style name="DefaultTimePickerTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="android:colorAccent">@color/defaultAccent</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorSecondary">@color/textBlack</item>
        <item name="android:timePickerStyle">@style/DefaultTimePickerStyle</item>
    </style>
    <style name="DefaultTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:background">@color/defaultBackground</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/defaultAccent</item>
        <item name="android:colorAccent">@color/defaultAccent</item>
    </style>

    <!-- Alternative Theme -->
    <style name="SieveAlternative" parent="SieveDefault">
        <item name="android:colorBackground">@color/alternativeBackground</item>
        <item name="priorityHigh">@color/alternativeHigh</item>
        <item name="priorityMed">@color/alternativeMed</item>
        <item name="priorityLow">@color/alternativeLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="android:colorPrimaryDark">@color/alternativeButton</item>
        <item name="android:statusBarColor">@color/alternativeBar</item>
        <item name="android:colorAccent">@color/alternativeAccent</item>
        <item name="dividerColor">@color/alternativeBar</item>
        <item name="dividerHidden">@color/alternativeBackground</item>
    </style>

    <!-- Dark Theme -->
    <style name="SieveDark" parent="SieveDefault">
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="priorityHigh">@color/darkHigh</item>
        <item name="priorityMed">@color/darkMed</item>
        <item name="priorityLow">@color/darkLow</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textColorPrimary">@color/textWhite</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:colorPrimaryDark">@color/darkButton</item>
        <item name="android:statusBarColor">@color/darkBar</item>
        <item name="colorPrimaryDark">@color/darkButton</item>
        <item name="dividerColor">@color/darkBar</item>
        <item name="dividerHidden">@color/darkBackground</item>
    </style>

    <!-- Simple Theme -->
    <style name="SieveSimple" parent="SieveDefault">
        <item name="android:colorBackground">@color/simpleBackground</item>
        <item name="android:statusBarColor">@color/simpleBar</item>
        <item name="priorityHigh">@color/simpleHigh</item>
        <item name="priorityMed">@color/simpleMed</item>
        <item name="priorityLow">@color/simpleLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="colorAccent">@color/simpleAccent</item>
        <item name="android:colorPrimaryDark">@color/simpleButton</item>
        <item name="dividerColor">@color/simpleBar</item>
        <item name="dividerHidden">@color/simpleBackground</item>
    </style>

    <!-- Twilight Theme -->
    <style name="SieveTwilight" parent="SieveDefault" >
        <item name="android:colorBackground">@color/twilightBackground</item>
        <item name="colorAccent">@color/twilightAccent</item>
        <item name="android:statusBarColor">@color/twilightBar</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="priorityHigh">@color/twilightHigh</item>
        <item name="priorityMed">@color/twilightMed</item>
        <item name="priorityLow">@color/twilightLow</item>
        <item name="colorPrimaryDark">@color/twilightButton</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="dividerColor">@color/twilightBar</item>
        <item name="dividerHidden">@color/twilightBackground</item>
    </style>

    <!-- Olive Theme -->
    <style name="SieveOlive" parent="SieveDefault" >
        <item name="android:colorPrimaryDark">@color/oliveButton</item>
        <item name="colorAccent">@color/oliveAccent</item>
        <item name="android:colorBackground">@color/oliveBackground</item>
        <item name="android:statusBarColor">@color/oliveBar</item>
        <item name="priorityHigh">@color/oliveHigh</item>
        <item name="priorityMed">@color/oliveMed</item>
        <item name="priorityLow">@color/oliveLow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="colorPrimaryDark">@color/oliveButton</item>
        <item name="dividerColor">@color/oliveBar</item>
        <item name="dividerHidden">@color/oliveBackground</item>
    </style>
</resources>
